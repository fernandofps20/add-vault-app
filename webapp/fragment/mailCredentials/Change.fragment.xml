<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
		<form:SimpleForm>
			<Label text="secretType" />
			<core:Fragment
				fragmentName="com.add.vault.fragment.SelectSecret"
				type="XML">
			</core:Fragment>
			<Label text="secretAlias" />
			<Input value="{secret>/secretAlias}" />
			<Label text="mailId" />
			<Input value="{secret>/secret/mailId}" />
			<Label text="mailAddress" />
			<Input value="{secret>/secret/mailAddress}" />
			<Label text="mailUserDomain" />
			<Input value="{secret>/secret/mailUserDomain}" />
			<Label text="mailUserAccount" />
			<Input value="{secret>/secret/mailUserAccount}" />
			<Label text="mailPassword" />
			<Input value="{secret>/secret/mailPassword}" />
			<Label text="passwordExpiryDate" />
			<Input value="{secret>/secret/passwordExpiryDate}" />
        </form:SimpleForm>
</core:FragmentDefinition>