<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
		<form:SimpleForm>
			<Label text="{i18n>secretType}" />
			<core:Fragment
				fragmentName="com.add.vault.fragment.SelectSecret"
				type="XML">
			</core:Fragment>
			<core:Fragment
				fragmentName="com.add.vault.fragment.SecretAlias"
				type="XML">
			</core:Fragment>
			<Label text="{i18n>mailId}" />
			<Input value="{secret>/mailId}" />
			<Label text="{i18n>mailAddress}" />
			<Input value="{secret>/mailAddress}" />
			<Label text="{i18n>mailUserDomain}" />
			<Input value="{secret>/mailUserDomain}" />
			<Label text="{i18n>mailUserAccount}" />
			<Input value="{secret>/mailUserAccount}" />
			<Label text="{i18n>mailPassword}" />
			<Input value="{secret>/mailPassword}" />
			<Label text="{i18n>passwordExpiryDate}" />
			<Input value="{secret>/passwordExpiryDate}" />
        </form:SimpleForm>
</core:FragmentDefinition>