<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Select
		id="selectSecret"
		selectedKey="{secret>/secretType}"
		change="onChangeCreateCredentials"
		required="true">
		<items>
			<core:Item text="certificate" key="certificate"/>
			<core:Item text="mailCredentials" key="mailcredentials"/>
			<core:Item text="oauthcredentials" key="oauthcredentials"/>
			<core:Item text="userCredentials" key="usercredentials"/>
			<core:Item text="others" key="others"/>
		</items>
	</Select>
</core:FragmentDefinition>