<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns:unified="sap.ui.unified"
	xmlns:core="sap.ui.core">
		<form:SimpleForm>
			<Label text="secretType" />
			<core:Fragment
				fragmentName="com.add.vault.fragment.SelectSecret"
				type="XML">
			</core:Fragment>
			<core:Fragment
				fragmentName="com.add.vault.fragment.SecretAlias"
				type="XML">
			</core:Fragment>
			<Label text="expiryDate" />
			<DatePicker
				id="datePickerExpiryDate"
				value="{secret>/expiryDate}"
				minDate="{minDate>/}" 
				valueFormat="yyyy-MM-dd"
				change="handleChange"/>
			<Label text="ouField" />
			<Input value="{secret>/ouField}" />
			<Label text="pbKey" />
			<unified:FileUploader
				id="publicKeyFileUploader"
				name="publicKeyFileUpload"
				change="onFileChange"
				fileType="cer"
				tooltip="Upload your file to the server"
				placeholder="Choose a file for Upload..."
				uploadComplete="handleUploadComplete"/>
			<!--<Input value="{secret>/secret/pbKey}" />-->
			<Label text="pkcs12" />
			<unified:FileUploader
				id="pkcs12FileUploader"
				name="pkcs12FileUpload"
				change="onFileChange"
				fileType="cer"
				tooltip="Upload your file to the server"
				placeholder="Choose a file for Upload..."
				uploadComplete="handleUploadComplete"/>
			<!--<Input value="{secret>/secret/pkcs12}" />-->
			<Label text="pkcs12Password" />
			<Input value="{secret>/pkcs12Password}" />
			<Label text="pvKey" />
			<unified:FileUploader
				id="privateKeyFileUploader"
				name="privateKeyFileUpload"
				change="onFileChange"
				fileType="key"
				tooltip="Upload your file to the server"
				placeholder="Choose a file for Upload..."
				uploadComplete="handleUploadComplete"/>
			<!--<Input value="{secret>/secret/pvKey}" />-->
        </form:SimpleForm>
</core:FragmentDefinition>