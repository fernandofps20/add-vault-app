<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
		<form:SimpleForm>
			<Label text="{i18n>secretType}" />
			<Text text="{retrieveSecret>/data/secretType}" />
			<Label text="{i18n>secretAlias}" />
			<Text text="{retrieveSecret>/data/secretAlias}" />
			<Label text="{i18n>userDomain}" />
			<Text text="{retrieveSecret>/data/userDomain}" />
			<Label text="{i18n>userAccount}" />
			<Text text="{retrieveSecret>/data/userAccount}" />
			<Label text="{i18n>userPassword}" />
			<Text text="{retrieveSecret>/data/userPassword}" />
			<Label text="{i18n>passwordExpiryDate}" />
			<Text text="{path: 'retrieveSecret>/data/passwordExpiryDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'short', source: { pattern: 'yyyy/MM/dd' } } }" />
			<Label text="{i18n>userDirectoryAddress}" />
			<Text text="{retrieveSecret>/data/userDirectoryAddress}" />
			<Label text="{i18n>updatedAt}" />
			<Text text="{retrieveSecret>/data/updatedAt}" />
        </form:SimpleForm>
</core:FragmentDefinition>