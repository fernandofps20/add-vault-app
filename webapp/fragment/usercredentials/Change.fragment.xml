<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
		<form:SimpleForm>
			<Label text="secretType" />
			<core:Fragment
				fragmentName="com.add.vault.fragment.SelectSecret"
				type="XML">
			</core:Fragment>
			<core:Fragment
				fragmentName="com.add.vault.fragment.SecretAlias"
				type="XML">
			</core:Fragment>
			<Label text="userDomain" />
			<Input value="{secret>/userDomain}" />
			<Label text="userAccount" />
			<Input value="{secret>/userAccount}" />
			<Label text="userPassword" />
			<Input value="{secret>/userPassword}" />
			<Label text="passwordExpiryDate" />
			<Input value="{secret>/passwordExpiryDate}" />
			<Label text="userDirectoryAddress" />
			<Input value="{secret>/userDirectoryAddress}" />
        </form:SimpleForm>
</core:FragmentDefinition>