<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
		<form:SimpleForm>
			<Label text="{i18n>secretType}" />
			<core:Fragment
				fragmentName="com.add.vault.fragment.SelectSecret"
				type="XML">
			</core:Fragment>
			<core:Fragment
				fragmentName="com.add.vault.fragment.SecretAlias"
				type="XML">
			</core:Fragment>
			<Label text="{i18n>userDomain}" />
			<Input value="{secret>/userDomain}" />
			<Label text="{i18n>userAccount}" />
			<Input value="{secret>/userAccount}" />
			<Label text="{i18n>userPassword}" />
			<Input value="{secret>/userPassword}" />
			<Label text="{i18n>passwordExpiryDate}" />
			<Input value="{secret>/passwordExpiryDate}" />
			<Label text="{i18n>userDirectoryAddress}" />
			<Input value="{secret>/userDirectoryAddress}" />
        </form:SimpleForm>
</core:FragmentDefinition>