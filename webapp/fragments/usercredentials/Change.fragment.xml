<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
		<form:SimpleForm>
			<Label text="secretType" />
			<Select
				selectedKey="userCredential"
				change="onChangeCreateCredentials">
				<items>
					<core:Item text="certificate" key="certificate"/>
					<core:Item text="mailCredentials" key="mailCredentials"/>
					<core:Item text="oauthcredentials" key="oauthcredentials"/>
					<core:Item text="userCredential" key="userCredential"/>
					<core:Item text="others" key="others"/>
				</items>
			</Select>
			<Label text="secretAlias" />
			<Input value="{secretAlias}" />
			<Label text="userDomain" />
			<Input value="{userDomain}" />
			<Label text="userAccount" />
			<Input value="{userAccount}" />
			<Label text="userPassword" />
			<Input value="{userPassword}" />
			<Label text="passwordExpiryDate" />
			<Input value="{passwordExpiryDate}" />
			<Label text="userDirectoryAddress" />
			<Input value="{userDirectoryAddress}" />
			<Label text="updatedAt" />
			<Input value="{updatedAt}" />
        </form:SimpleForm>
</core:FragmentDefinition>