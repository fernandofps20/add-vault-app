<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
		<form:SimpleForm>
			<Label text="secretType" />
			<Select
				change="onChangeCreateCredentials">
				<items>
					<core:Item text="certificate" key="certificate"/>
					<core:Item text="mailCredentials" key="mailCredentials"/>
					<core:Item text="oauthcredentials" key="oauthcredentials"/>
					<core:Item text="userCredential" key="userCredential"/>
					<core:Item text="others" key="others"/>
				</items>
			</Select>
			<Label text="secretAlias" />
			<Input value="{secretAlias}" />
			<Label text="mailId" />
			<Input value="{mailId}" />
			<Label text="mailAddress" />
			<Input value="{mailAddress}" />
			<Label text="mailUserDomain" />
			<Input value="{mailUserDomain}" />
			<Label text="mailUserAccount" />
			<Input value="{mailUserAccount}" />
			<Label text="mailPassword" />
			<Input value="{mailPassword}" />
			<Label text="passwordExpiryDate" />
			<Input value="{passwordExpiryDate}" />
        </form:SimpleForm>
</core:FragmentDefinition>